<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.ScrollPane?>
<SplitPane orientation="HORIZONTAL" xmlns:fx="http://javafx.com/fxml" fx:controller="Controller">
    <items>
        <!-- Tabela de Registradores -->
        <VBox spacing="10">
            <Label text="Registradores" />
            <TableView fx:id="TabelaReg">
                <columns>
                    <TableColumn fx:id="registerColumn" text="Register" />
                    <TableColumn fx:id="valueColumn" text="Value" />
                </columns>
            </TableView>
        </VBox>
        <!-- Tabela de Memória -->
        <VBox spacing="10">
            <Label text="Memória" />
            <ScrollPane fitToWidth="true">
                <content>
                    <TableView fx:id="TabelaMem">
                        <columns>
                            <TableColumn fx:id="memoryIndexColumn" text="Posição" />
                            <TableColumn fx:id="memoryValueColumn" text="Conteúdo (3 Bytes)" />
                        </columns>
                    </TableView>
                </content>
            </ScrollPane>
        </VBox>
    </items>
</SplitPane>
